<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="ListFolder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListFolder"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="设置"/>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="项目">
                    <MenuItem Header="新建" Click="ProjectNew_Click"/>
                </MenuItem>
            </Menu>
            <Grid>
                <Controls:TransitioningContentControl Name="transitionLayer" Transition="Right">
                </Controls:TransitioningContentControl>
            </Grid>
        </DockPanel>
    </Grid>

</Controls:MetroWindow>
